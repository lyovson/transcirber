{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "lint": {
    "include": ["*.ts", "src/**/*.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["*.ts", "src/**/*.ts"],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false
  },
  "tasks": {
    "start": "deno run --allow-read --allow-write --allow-net --allow-env --env-file=.env main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-read --allow-write --allow-env --env-file=.env"
  },
  "imports": {
    "elevenlabs": "npm:elevenlabs@1.52.0"
  }
}
